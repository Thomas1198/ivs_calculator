# Custom button
<GridButton@CustomButton>:
    font_size: 30

<FuncButton@CustomButton>:
    font_size: 30
    background_normal: ''
    background_color: .7, .8, .4, .8

<Tooltip>:
    size_hint: None, None
    font_size: 20
    size: self.texture_size[0]+10, self.texture_size[1]+10
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<CalculatorGridLayout>:
    id: calculator
    display: input_field
    rows: 5
    BoxLayout:
        TextInput:
            id: input_field
            font_size: 30
            multiline: False
    BoxLayout:
        FuncButton:
            text: "x!"
            on_press: input_field.text += "!"
        GridButton:
            text: "7"
            on_press: input_field.text += self.text
        GridButton:
            text: "8"
            on_press: input_field.text += self.text
        GridButton:
            text: "9"
            on_press: input_field.text += self.text
        FuncButton:
            text: "+"
            on_press: input_field.text += self.text
 
    BoxLayout:
        FuncButton:
            text: "x^y"
            on_press: input_field.text += "^"
        GridButton:
            text: "4"
            on_press: input_field.text += self.text
        GridButton:
            text: "5"
            on_press: input_field.text += self.text
        GridButton:
            text: "6"
            on_press: input_field.text += self.text
        FuncButton:
            text: "-"
            on_press: input_field.text += self.text
 
    BoxLayout:
        FuncButton:
            text: "√x"
            on_press: input_field.text += "√"
        GridButton:
            text: "1"
            on_press: input_field.text += self.text
        GridButton:
            text: "2"
            on_press: input_field.text += self.text
        GridButton:
            text: "3"
            on_press: input_field.text += self.text
        FuncButton:
            text: "*"
            on_press: input_field.text += self.text
 
    BoxLayout:
        FuncButton:
            text: "y√x"
            on_press: input_field.text += "√"
        GridButton:
            text: "0"
            on_press: input_field.text += self.text
        GridButton:
            text: "."
            on_press: input_field.text += self.text
        GridButton:
            text: "="
            on_press: calculator.calculate(input_field.text)
        FuncButton:
            text: "/"
            on_press: input_field.text += self.text